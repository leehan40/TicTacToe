<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIC TAC TOE"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="50dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Players"
        android:id="@+id/button2"
        android:onClick="start2Player"
        android:clickable="true"
        android:textSize="30sp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignStart="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignRight="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single  Player"
        android:id="@+id/button4"
        android:layout_below="@+id/textView2"
        android:onClick="start1Player"
        android:clickable="true"
        android:textSize="30dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true" />

    <view android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/view" class="edu.wiu.krl102.tictactoe.Tick"
        android:layout_below="@+id/button2"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
